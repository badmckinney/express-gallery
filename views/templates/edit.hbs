{{>header}}

<div class="edit">
  <h1 class="header">Gallery Editor</h1>
  <form method="POST" action="/gallery/{{id}}?_method=PUT">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="{{title}}" autofocus>
    <label for="link">Link:</label>
    <input type="text" name="link" id="link" value="{{link}}">
    <label for="author">Author:</label>
    <input type="text" name="author" id="author" value="{{author}}">
    <label for="description">Description:</label>
    <input name="description" id="description" value="{{description}}">
    <input type="submit" value="Submit">
  </form>
</div>